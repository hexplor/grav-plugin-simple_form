{% if fields | length > 1 %}
  <form name="simple_form" id="simple_form" novalidate action="https://getsimpleform.com/messages?form_api_token={{ token }}" enctype="multipart/form-data" method="post">

    {% for key, field in fields %}
      <div id="simple_form-{{ key }}">
        {% if field.type not in ['hidden', 'submit'] %}
          <label for="simple_form-field-{{ key }}">{{ field.title }}</label>
        {% endif %}

        {% if field.type in ['text', 'email', 'tel', 'hidden'] %}
          <input type="{{ field.type }}" id="simple_form-field-{{ key }}" name="{{ key }}" class="{{ field.class }}" placeholder="{{ field.placeholder }}" value="{{ field.default }}" />
        {% elseif field.type == 'textarea' %}
          <textarea id="simple_form-field-{{ key }}" name="{{ key }}" class="{{ field.class }}" placeholder="{{ field.placeholder }}">{{ field.default }}</textarea>
        {% elseif field.type == 'submit' %}
          <button id="simple_form-field-{{ key }}" name="{{ key }}" class="{{ field.class }}">{{ field.title }}</button>
        {% endif %}
      </div>
    {% endfor %}

    <div id="simple_form-success"></div>
  </form>
{% endif %}
